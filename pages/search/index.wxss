page {
    background-color: #dedede;
    padding: 20rpx;
}
.search_row {
    height: 90rpx;
    display: flex;
}
.search_row input {
    flex: 8;
    height: 100%;
    background-color: #fff;
    margin-right: 10rpx;
    padding-left: 30rpx;
}   
.search_row button {
    flex: 2;
    /* width: 110rpx; */
    height: 100%;
    line-height: 90rpx;
    font-size: 28rpx;
    padding: 0;
}
.search_content {
    margin-top: 30rpx;
}
.search_item {
    background-color: #fff;
    font-size: 26rpx;
    padding: 15rpx 10rpx;
    border-bottom: 1rpx solid #ccc;

    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
