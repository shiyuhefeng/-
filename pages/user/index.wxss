page {
    background-color: rgb(243, 240, 240);
}

.user_info_wrap {
   height: 45vh;
   background-color: var(--themeColor);
   position: relative;
}
.user_img_wrap {
    position: relative;
}
.user_btn {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 40%;
    border: 1rpx solid greenyellow;
    color: greenyellow;
    padding: 30rpx;
    font-size: 38rpx;
    border-radius: 10rpx;
}
.user_bg {
    height: 45vh;
    /* 高斯模糊 */
    filter: blur(10rpx);
}
.user_info {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 30%;
    text-align: center;
}
.user_icon {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.user_name {
    color: #fff;
    font-size: 28rpx;
    margin-top: 40rpx;
}


.user_content {
    position: relative;
}
.user_main {
    padding-bottom: 60rpx;
    position: absolute;
    left: 50%;
    top: -40rpx;
    width: 90%;
    transform: translateX(-50%);
    color: #666;
}
.history_wrap {
    background-color: #fff;
    display: flex;
}
.history_wrap navigator {
    flex: 1;
    text-align: center;
    padding: 10rpx 0;
}
.his_num {
    color: var(--themeColor);
}

.order-wrap {
    background-color: #fff;
    margin-top: 30rpx;
}   
.orders_title {
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}
.order_content {
    display: flex;
}
.order_content navigator {
    flex: 1;
    text-align: center;
    padding: 15rpx;
}
.iconfont {
    color: var(--themeColor);
    font-size: 40rpx;
}
.address_wrap {
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
}
.app_info_wrap {
    margin-top: 30rpx;
    background-color: #fff;
}
.app_info_contact {
    display: flex;
    justify-content: space-between;
}
.app_info_item {
    padding: 20rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #ccc;
}
.recommend_wrap {
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
}

