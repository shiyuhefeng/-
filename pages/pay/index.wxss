page {
  padding-bottom: 90rpx;
}

.user_info_row {
  display: flex;
  padding: 20rpx;
}
.user_info {
  flex: 5;
}
.user_phone {
  flex: 3;
  text-align: right;
}


.cart_content .cart_title {
  padding: 20rpx;
  font-size: 30rpx;
  color: var(--themeColor);
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}
.cart_main {
  width: 100%;
}
.cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}


.cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img_wrap image {
  width: 80%;
}
.goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.goods_price {
  color: rgba(255, 60, 0, 0.959);
  font-size: 34rpx;
}
.num_tool {
  display: flex;
}
.goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.total_price_wrap {
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
}
.total_price_text {
  color:rgba(255, 60, 0, 0.959);
  font-size: 32rpx;
  font-weight: 600;
}
.order_pay_wrap {
 flex: 3;
 display: flex;
 background-color: rgba(255, 60, 0, 0.959);
 color: #fff;
 font-size: 32rpx;
 font-weight: 600;
 justify-content: center;
 align-items: center;
}
  
  