.goods_item {
    display: flex;
    border-bottom: 1rpx solid #ccc;
}
.goods_img_wrap {
    display: flex;
    flex: 2;
    justify-content: center;
    align-items: center;
}
.goods_img_wrap image {
    width: 70%;
}
.goods_info_wrap {
    flex: 3;
    display: flex;
    flex-direction: column;
}
.goods_name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    flex: 3;
    margin-top: 30rpx;
}
.goods_price {
    flex: 2;
    color: var(--themeColor);
}
.not_data {
    width: 100%;
}
.not_data image {
    text-align: center;
}
