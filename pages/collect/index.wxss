.collect_main {
    background-color: #f3f4f6;
}
.collect_title {
    padding: 40rpx 0;
}
.collect_tips {
    padding : 15rpx;
    border:1rpx solid #ccc;
    margin-left: 25rpx;
    background-color: #fff;
}
.active {
    color: var(--themeColor);
    border: 1rpx solid currentColor;
}
.colelct_content {
}
.goods_item {
    display: flex;
    border-bottom: 1rpx solid #ccc;
    background-color: #fff;
}
.goods_img_wrap {
    display: flex;
    flex: 2;
    justify-content: center;
    align-items: center;
}
.goods_img_wrap image {
    width: 70%;
}
.goods_info_wrap {
    flex: 3;
    display: flex;
    flex-direction: column;
}
.goods_name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    flex: 3;
    margin-top: 30rpx;
}
.goods_price {
    flex: 2;
    color: var(--themeColor);
}

