page {
    height: 100%;
}
.cates {
    height: 100%;
}
.cates_container {
    display: flex;
    height: calc( 100vh - 90rpx);
}

.left_menu {
    flex: 2;
}
.menu_item {
    display: flex;
    height: 80rpx;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
}
.active {
    color: var(--themeColor);
    margin: 5rpx 0;
    border-left: 5rpx solid currentColor;
}

.right_content {
    flex: 5;

}
.goods_group {
    
}
.delimiter {
    color: #ccc;
    padding: 0 10rpx;
}
.goods_title {
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.goods_list {
    display: flex;
    flex-wrap: wrap;
}
.goods_list navigator{
    width: 33.33%;
    text-align: center;
}
.goods_list navigator image {
    width: 100%;
}